<div class="l-constrained">
  <h1 class="border_heading">
    <%= t('.change_your_password', :default => 'Change your password') %>
  </h1>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form"}) do |f| %>
    <%= devise_error_messages! %>
  
    <%= f.hidden_field :reset_password_token %>
    <div class="l-grid-row clearfix">
      <div class="l-grid-4-12 l-align-left">
	<%= f.label :password, t('.new_password', :default => 'New password') %>
      </div>
      <div class="l-grid-4-12 l-align-left">
	<%= f.password_field :password %>
      </div>
    </div>
    
    <div class="l-grid-row clearfix">
      <div class="l-grid-4-12 l-align-left">
	<%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %>
      </div>
      <div class="l-grid-4-12 l-align-left">
	<%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="l-grid-row clearfix">
      <div class="l-grid-3-12 l-align-left">
	<%= f.submit t('.change_my_password', :default => 'Change my password'), class: "button button-success" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
