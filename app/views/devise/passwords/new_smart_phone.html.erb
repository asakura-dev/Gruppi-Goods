<div class="l-constrained">
  <h1 class="border_heading">
    パスワードを忘れましたか？
  </h1>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="l-grid-row clearfix">
	<%= f.label :email %>
	<%= f.email_field :email %>
    </div>
    <div class="l-grid-row clearfix">
      <div class="l-grid-10-12 l-align-right">
	<%= f.submit "パスワードをリセット", class: "button button-success" %>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
