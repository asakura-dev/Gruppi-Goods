<div class="l-constrained">
  <h1 class="border_heading"><%= @heading %></h1>

  <% @products.each_with_index do |product, i|%>
    <div class="l-grid-row">
      <div class="block_content product_small clearfix">
	<div class="l-grid-row clearfix">
	  <div class="l-grid-1-4 l-align-left">
	    <div class="inner_offset">
	      <% unless product.lendable? %>
		<span class="hover_batch">貸出中</span>
	      <% end %>
	      <%= link_to image_tag(product.image.url), product_path(product)%>
	    </div>
	  </div>
	  <div class="l-grid-3-4 l-align-left">
	    
	    <%= link_to truncate(product.name, :length => 30, :separator => "..."), product_path(product)%>
	    
	    <p>
	      <%= truncate(product.description, :length => 100, :separator => "...") %>
	    </p>
	  </div>
	</div>
      </div>
    </div>
  <% end %>
</div>
<div class="l-constrained pagination">
      <%= will_paginate @products, previous_label: "前", next_label: "次"%>
</div>
